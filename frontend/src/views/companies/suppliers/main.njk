{% extends "layouts/dashboard.njk" %}

{% block title %}Platform Dashboard{% endblock %}

{% block content %}
{% include "components/dashboard-sidebar.njk" %}
{% include "components/dashboard-header.njk" %}

<main class="overflow-y-auto p-6 lg:p-10">
    <div class="w-full space-y-8">

        <div class="mb-8">
            <nav class="flex mb-3 text-xs font-bold tracking-widest text-gray-500 justify-between flex-col md:flex-row gap-5"
                aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3 uppercase">
                    <li class="inline-flex items-center">
                        <a href="/companies/{{ company_information.id }}"
                            class="hover:text-white transition-colors">Negocio</a>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <span class="ml-1 md:ml-2 text-orange-500">Provedores</span>
                        </div>
                    </li>
                </ol>

                <a href="/companies/{{ company_information.id }}/suppliers/create"
                    class="bg-(--accent) hover:bg-(--accent-hover) text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95 cursor-pointer">
                    <i class="fa-solid fa-plus"></i>
                    Nuevo Provedor
                </a>
            </nav>
        </div>

        <div class="rounded-3xl overflow-hidden glass-card">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-white/5 border-bottom border-(--border)">
                            <th class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-(--text-muted)">
                                Nombre</th>
                            <th class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-(--text-muted)">
                                Documento (RUC)</th>
                            <th class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-(--text-muted)">
                                Tipo</th>
                            <th class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-(--text-muted)">
                                Estado</th>
                            {# <th
                                class="px-6 py-4 text-[10px] font-black uppercase tracking-[0.2em] text-(--text-muted) text-right">
                                Acciones</th> #}
                        </tr>
                    </thead>
                    <tbody class="text-sm font-medium">
                        {% for supplier in suppliers %}
                        <tr class="table-row">
                            <td class="px-6 py-5">
                                <div class="flex items-center gap-4">
                                    <div>
                                        <p class="font-bold capitalize">{{ supplier.name }}</p>
                                        <p class="text-xs text-(--text-muted) font-bold lowercase">{% if
                                            supplier.reason_name %} {{ supplier.reason_name }} {% else %} ----- {% endif
                                            %}
                                        </p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-5">
                                <div class="flex items-center gap-4">
                                    <div>
                                        <p class="text-xs text-(--text-muted) font-bold lowercase">{% if
                                            supplier.document %} {{ supplier.document }} {% else %} ----- {% endif %}
                                        </p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-5">
                                {% if supplier.type == "product" %}
                                <p class="text-xs text-(--text-muted) font-bold capitalize">Productos-Insumos</p>
                                {% elif supplier.type == "service" %}
                                <p class="text-xs text-(--text-muted) font-bold capitalize">Servicios</p>
                                {% elif supplier.type == "mixed" %}
                                <p class="text-xs text-(--text-muted) font-bold capitalize">Productos-Insumos y
                                    Servicios</p>
                                {% else %}
                                <p class="text-xs text-(--text-muted) font-bold capitalize">Otros</p>
                                {% endif %}
                            </td>
                            <td class="px-6 py-5">
                                {% if supplier.is_active %}
                                <span class="status-badge badge-active">Activo</span>
                                {% else %}
                                <span class="status-badge badge-blocked">Desactivado</span>
                                {% endif %}
                            </td>
                            {# <td class="px-6 py-5">
                                <div class="flex items-center justify-end gap-2 text-(--text-muted)">
                                    <a href="#"
                                        class="p-2.5 text-green-400 hover:bg-green-400/5 rounded-xl transition-all cursor-pointer"
                                        title="Editar">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    {% if "platform.users.update" in permissions %}
                                    <a href="#"
                                        class="p-2.5 text-yellow-500 hover:bg-yellow-500/10 rounded-xl transition-all cursor-pointer"
                                        title="Suspender">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>
                                    {% endif %}
                                    <button
                                        class="p-2.5 text-red-500 hover:bg-red-500/10 rounded-xl transition-all cursor-pointer">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </td> #}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="flex items-center justify-between mt-6">
            {% if pagination.back %}
            <a href="{{ update_query(query, { page: page - 1 }) }}"
                class="px-4 py-2 rounded-xl bg-white/10 hover:bg-white/20 transition">
                <i class="fa-duotone fa-regular fa-angle-left"></i> Anterior
            </a>
            {% else %}
            <span class="px-4 py-2 rounded-xl bg-white/5 text-gray-500 cursor-not-allowed">
                <i class="fa-duotone fa-regular fa-angle-left"></i> Anterior
            </span>
            {% endif %}

            <span class="text-sm text-gray-400">
                PÃ¡gina {{ page }} de {{ pagination.q_pages }}
            </span>

            {% if pagination.next %}
            <a href="{{ update_query(query, { page: page +1 }) }}"
                class="px-4 py-2 rounded-xl bg-white/10 hover:bg-white/20 transition">
                Siguiente <i class="fa-duotone fa-regular fa-angle-right"></i>
            </a>
            {% else %}
            <span class="px-4 py-2 rounded-xl bg-white/5 text-gray-500 cursor-not-allowed">
                Siguiente <i class="fa-duotone fa-regular fa-angle-right"></i>
            </span>
            {% endif %}
        </div>

    </div>
</main>

{% include "components/dashboard-footer.njk" %}

{% endblock %}