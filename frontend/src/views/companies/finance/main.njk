<script>
    const finance_data = {{ finance | dump | safe }};
    const last_7 = finance_data.chart_days;

    const labels = last_7.map(e => e.date);
    const incomes = last_7.map(e => e.income);
    const expenses = last_7.map(e => e.expense);

    const income = finance_data.income;
    const expense = finance_data.expense;

    window.onload = function () {
        const ctx_days = document.getElementById('days_chart').getContext('2d');

        const gradientIncome = ctx_days.createLinearGradient(0, 0, 0, 400);
        gradientIncome.addColorStop(0, 'rgba(253, 66, 10, 0.4)');
        gradientIncome.addColorStop(1, 'rgba(253, 66, 10, 0)');

        const gradientExpense = ctx_days.createLinearGradient(0, 0, 0, 400);
        gradientExpense.addColorStop(0, 'rgba(59, 130, 246, 0.4)');
        gradientExpense.addColorStop(1, 'rgba(59, 130, 246, 0)');

        new Chart(ctx_days, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Ingresos',
                        data: incomes,
                        borderColor: '#FD420A',
                        backgroundColor: gradientIncome,
                        fill: true,
                        tension: 0.4,
                        borderWidth: 4,
                        pointRadius: 6
                    },
                    {
                        label: 'Gastos',
                        data: expenses,
                        borderColor: '#3B82F6',
                        backgroundColor: gradientExpense,
                        fill: true,
                        tension: 0.4,
                        borderWidth: 4,
                        pointRadius: 6
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    x: {
                        grid: { display: false }
                    },
                    y: {
                        ticks: {
                            callback: v => 'S/ ' + v
                        }
                    }
                }
            }
        });

        const ctx_doughnut = document.getElementById('doughnut_chart').getContext('2d');
        
        new Chart(ctx_doughnut, {
            type: 'doughnut',
            data: {
                labels: ['Ingresos', "Egresos"],
                datasets: [{
                    data: [
                        income, expense
                    ],
                    backgroundColor: ['#22C55E', '#EF4444'],
                    hoverOffset: 20,
                    borderWidth: 0,
                    borderRadius: 10
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '80%',
                plugins: {
                    legend: { display: false }
                }
            }
        });
    };
</script>

