<script>
    let revenue_chart = null;
    let category_chart = null;

    const company_id = {{ company_information.id | dump | safe }};

    function init_revenue_chart() {
        const ctx = document.getElementById('revenue_chart').getContext('2d');

        Chart.defaults.color = '#8B949E';
        Chart.defaults.font.family = "'Inter', sans-serif";

        revenue_chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [],
                datasets: [
                    {
                        label: 'Ingresos',
                        data: [],
                        borderColor: '#FD420A',
                        backgroundColor: 'rgba(253,66,10,0.15)',
                        tension: 0.4,
                        fill: true,
                        pointRadius: 0,
                        borderWidth: 3
                    },
                    {
                        label: 'Gastos',
                        data: [],
                        borderColor: '#30363D',
                        backgroundColor: 'rgba(48,54,61,0.35)',
                        tension: 0.4,
                        fill: true,
                        pointRadius: 0,
                        borderWidth: 2
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#151B23',
                        padding: 12,
                        titleFont: { size: 12, weight: 'bold' },
                        bodyFont: { size: 12 },
                        borderColor: '#30363D',
                        borderWidth: 1,
                        displayColors: true,
                        callbacks: {
                            label: ctx => ` S/ ${ctx.raw.toLocaleString()}`
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: 'rgba(255,255,255,0.05)', drawBorder: false },
                        ticks: { callback: v => 'S/ ' + v }
                    },
                    x: { grid: { display: false } }
                },
                animation: {
                    duration: 900,
                    easing: 'easeOutQuart'
                }
            }
        });
    };

    function update_flow_chart(labels, sales, expenses) {
        if (!revenue_chart) return;

        revenue_chart.data.labels = labels;
        revenue_chart.data.datasets[0].data = sales;
        revenue_chart.data.datasets[1].data = expenses;

        revenue_chart.update();
    };

    async function get_flow_data(btn, type) {
        const flow_buttons = document.querySelectorAll(".flow_button");

        flow_buttons.forEach(b => {
            b.classList.remove("font-bold", "bg-[#161B22]", "text-white");
            b.classList.add("text-gray-500");
        });

        btn.classList.remove("text-gray-500");
        btn.classList.add("font-bold", "bg-[#161B22]", "text-white");

        const response = await fetch(`/companies/${company_id}/api/cash/flow/${type}`); // font-bold bg-[#161B22] text-white

        const result = await response.json();
        if (result.error) {
            notify("Algo salio mal", "error");
            return;
        }

        update_flow_chart(
            result.data.labels,
            result.data.sales,
            result.data.expenses
        );
    };

    document.addEventListener("DOMContentLoaded", () => {
        init_revenue_chart();

        const defaultBtn = document.querySelector(".flow_button");
        get_flow_data(defaultBtn, "12m");
    });

</script>

