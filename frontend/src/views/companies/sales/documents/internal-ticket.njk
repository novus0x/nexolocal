<style>
    body {
        margin: 0 auto;
        padding: 5mm;
        background: #fff;
        color: #000;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 11px;
    }

    .dotted-line {
        border-top: 1px dotted #000;
        margin: 5px 0;
    }

    .text-center {
        text-align: center;
    }

    .bold {
        font-weight: bold;
    }

    .w-full {
        width: 100%;
    }

    .qr-placeholder {
        width: 100px;
        height: 100px;
        border: 1px solid #000;
        margin: 10px auto;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 8px;
    }
</style>

<div class="text-center">
    <div class="bold" style="font-size: 14px;">{{ company.name }}</div>
    {% if company.is_formal %}
    <div>RUC: 20600000000</div>
    {% endif %}
    <div>{{ company.address }}</div>
    {% if company.phone %}
    <div>Telf: {{ company.phone }}</div>
    {% endif %}
</div>

<div class="dotted-line"></div>

<div class="text-center bold" style="font-size: 12px;">
    BOLETA DE VENTA ELECTRÓNICA
</div>
<div class="text-center bold">
    {{ sale.invoice }}
</div>

<div class="dotted-line"></div>

<table class="w-full">
    <tr>
        <td>Fecha Emisión:</td>
        <td align="right">{{ sale.date }}</td>
    </tr>
    <tr>
        <td>Cliente:</td>
        <td align="right">CLIENTE VARIOS</td>
    </tr>
    <tr>
        <td>DNI/RUC:</td>
        <td align="right">00000000</td>
    </tr>
    <tr>
        <td>Moneda:</td>
        <td align="right">SOLES (S/)</td>
    </tr>
</table>

<div class="dotted-line"></div>

<table class="w-full">
    <thead>
        <tr>
            <th align="left">DESCRIPCIÓN</th>
            <th align="center">CANT</th>
            <th align="right">TOTAL</th>
        </tr>
    </thead>
    <tbody>
        {% for item in sale.items %}
        <tr>
            <td colspan="3" style="padding-top: 5px;">{{ item.name }}</td>
        </tr>
        <tr>
            <td align="left" style="font-size: 10px;">
                {% if item.is_service %}
                SERVICIO
                {% elif item.is_bulk %}
                PRECIO: S/ {{ item.price }} x kg
                {% else %}
                UNID: S/ {{ item.price }}
                {% endif %}
            </td>

            <td align="center">
                {% if item.is_bulk %}
                {{ item.quantity | round(3) }}
                {% else %}
                {{ item.quantity }}
                {% endif %}
            </td>

            <td align="right">
                S/ {{ item.total | round(2) }}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<div class="dotted-line"></div>

<table class="w-full">
    <tr>
        <td>Op. Gravada:</td>
        <td align="right">S/ {{ sale.total }}</td>
    </tr>
    {% if company.is_formal %}
    <tr>
        <td>IGV (18%):</td>
        <td align="right">S/ 16,395.25</td>
    </tr>
    {% endif %}
    <tr>
        <td class="bold" style="font-size: 14px;">TOTAL:</td>
        <td align="right" class="bold" style="font-size: 14px;">S/ {{ sale.total }}</td>
    </tr>
</table>

<div class="dotted-line"></div>

<div style="font-size: 10px; margin-bottom: 5px;">
    SON: {{ string_value }}
</div>

<div class="dotted-line"></div>

<div class="text-center">
    <div class="qr-placeholder">
        {{ qrcode | safe }}
    </div>
    <div style="font-size: 9px;">
        Boleta de Venta Electrónica.<br>
        Consulte su documento en:<br>
        <span class="bold">nexolocal.floua.app/check-ticket</span>
    </div>
    <br>
    <div class="bold">¡GRACIAS POR SU COMPRA!</div>
</div>
