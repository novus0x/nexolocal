{% extends "layouts/dashboard.njk" %}

{% block title %}Platform Dashboard{% endblock %}

{% block content %}
{% include "components/dashboard-sidebar.njk" %}
{% include "components/dashboard-header.njk" %}

<main class="flex-1 overflow-y-auto p-6 lg:p-10">
    <div class="w-full space-y-8">

        <div class="mb-8">
            <nav class="flex mb-3 text-xs font-bold tracking-widest text-gray-500 flex-col md:flex-row gap-5"
                aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3 uppercase">
                    <li class="inline-flex items-center">
                        <a href="/companies/{{ company_information.id }}"
                            class="hover:text-white transition-colors">Negocio</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <a href="/companies/{{ company_information.id }}/products" id="breadcrumb-workspace"
                                class="hover:text-white ml-1 md:ml-2 transition-colors">Productos</a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <span class="ml-1 md:ml-2 text-orange-500">{{ product.name }}</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>

        <div class="grid grid-cols-12 gap-8">
            <div class="col-span-12 lg:col-span-3 space-y-6 animate-fade" style="animation-delay: 0.1s;">
                <div class="glass-card p-6">
                    <p class="text-[10px] font-black text-gray-500 uppercase tracking-[0.2em] mb-4">Métricas Globales
                    </p>
                    <div class="space-y-6">
                        <div class="relative pl-4 border-l-2 border-orange-500">
                            <p class="text-2xl font-black">S/ {{ product.price }}</p>
                            <p class="text-[10px] text-gray-500 font-bold">
                                {% if product.is_service %}
                                PRECIO DEL SERVICIO
                                {% elif product.is_bulk %}
                                PRECIO POR KG / L
                                {% else %}
                                PRECIO POR UNIDAD
                                {% endif %}
                            </p>
                        </div>
                        <div class="relative pl-4 border-l-2 border-emerald-500">
                            <p class="text-2xl font-black">---%</p>
                            <p class="text-[10px] text-gray-500 font-bold">RENDIMIENTO MES</p>
                        </div>
                        {% if not product.is_service %}
                        <div class="relative pl-4 border-l-2 border-blue-500">
                            <p class="text-2xl font-black">
                                {{ product.stock }}
                                {% if product.is_bulk %} kg / L{% endif %}
                            </p>
                            <p class="text-[10px] text-gray-500 font-bold">
                                {% if product.is_bulk %}
                                STOCK DISPONIBLE
                                {% else %}
                                STOCK FÍSICO
                                {% endif %}
                            </p>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <div class="glass-card p-6 overflow-hidden relative">
                    <div class="absolute -right-6 -bottom-6 w-24 h-24 bg-blue-500/10 rounded-full blur-3xl"></div>
                    <p class="text-[10px] font-black text-gray-500 uppercase mb-4 tracking-widest">QR del Producto</p>
                    <div class="w-full aspect-square bg-white rounded-2xl flex items-center justify-center p-4"
                        id="qrcode_container">
                        {{ qrcode | safe }}
                    </div>
                    <button onclick="download_svg('qrcode_container', 'qrcode-{{ product.id }}.svg')"
                        class="w-full mt-4 text-[10px] font-bold text-blue-400 hover:text-blue-300 transition-colors capitalize cursor-pointer">Descargar
                        Etiqueta</button>
                </div>
                <div class="glass-card p-6 overflow-hidden relative">
                    <div class="absolute -right-6 -bottom-6 w-24 h-24 bg-blue-500/10 rounded-full blur-3xl"></div>
                    <p class="text-[10px] font-black text-gray-500 uppercase mb-4 tracking-widest">Barcode del Producto
                    </p>
                    <div class="w-full aspect-square bg-white rounded-2xl flex items-center justify-center p-4"
                        id="barcode_container">
                        {{ barcode | safe }}
                    </div>
                    <button onclick="download_svg('barcode_container', 'barcode-{{ product.id }}.svg')"
                        class="w-full mt-4 text-[10px] font-bold text-blue-400 hover:text-blue-300 transition-colors capitalize cursor-pointer">Descargar
                        Etiqueta</button>
                </div>
            </div>

            <div class="col-span-12 lg:col-span-9 space-y-8 animate-fade" style="animation-delay: 0.2s;">

                <div class="glass-card p-8 group">
                    <div class="flex items-center gap-3 mb-8">
                        <div
                            class="w-12 h-12 rounded-2xl bg-orange-500/10 flex items-center justify-center text-orange-500 group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-pen-nib"></i>
                        </div>
                        <h2 class="text-lg font-bold">Información del Producto</h2>
                    </div>

                    <div class="grid grid-cols-2 gap-8">
                        <div class="space-y-2">
                            <span class="text-[10px] font-bold text-gray-500 uppercase">Identificador Unico</span>
                            <p>{{ product.identifier }}</p>
                        </div>
                        <div class="space-y-2">
                            <span class="text-[10px] font-bold text-gray-500 uppercase">Referencia SKU</span>
                            <p>{{ product.sku }}</p>
                        </div>
                        <div class="space-y-2">
                            <span class="text-[10px] font-bold text-gray-500 uppercase">Nombre Comercial</span>
                            <p>{{ product.name }}</p>
                        </div>
                        <div class="space-y-2">
                            <span class="text-[10px] font-bold text-gray-500 uppercase">Provedor</span>
                            {% if supplier.name %}
                            <p>{{ supplier.name }}</p>
                            <p class="text-xs">RUC: <span class="text-gray-400">{% if supplier.document %} {{ supplier.document }} {% else %} ----- {% endif %}</span></p>
                            {% else %}
                            <p>-----</p>
                            {% endif %}
                        </div>
                        <div class="col-span-2 space-y-2">
                            <span class="text-[10px] font-bold text-gray-500 uppercase">Descripción</span>
                            <p>{{ product.description }}</p>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 gap-8">
                    {% if not product.is_service and not product.is_bulk %}
                    <div class="glass-card p-8 col-span-2">
                        <div class="flex items-center gap-3 mb-6">
                            <div
                                class="w-10 h-10 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-400">
                                <i class="fa-solid fa-box-open"></i>
                            </div>
                            <h2 class="font-bold">Dimensiones</h2>
                        </div>
                        <div class="grid grid-cols-3 gap-4">
                            <div class="text-center p-3 rounded-2xl bg-white/5 border border-white/5">
                                <p class="text-xs text-gray-500 font-bold mb-1 uppercase">Largo</p>
                                <p class="text-lg font-bold">{{ dimensions[0] }}</p>
                            </div>
                            <div class="text-center p-3 rounded-2xl bg-white/5 border border-white/5">
                                <p class="text-xs text-gray-500 font-bold mb-1 uppercase">Ancho</p>
                                <p class="text-lg font-bold">{{ dimensions[1] }}</p>
                            </div>
                            <div class="text-center p-3 rounded-2xl bg-white/5 border border-white/5">
                                <p class="text-xs text-gray-500 font-bold mb-1 uppercase">Alto</p>
                                <p class="text-lg font-bold">{{ dimensions[2] }}</p>
                            </div>
                        </div>
                    </div>

                    {% elif product.is_service %}
                    <div class="glass-card p-8 bg-linear-to-br from-orange-500/3 to-transparent">
                        <div class="flex items-center justify-between mb-6">
                            <div class="flex items-center gap-3">
                                <div
                                    class="w-10 h-10 rounded-xl bg-orange-500/10 flex items-center justify-center text-orange-500">
                                    <i class="fa-solid fa-wand-magic-sparkles"></i>
                                </div>
                                <h2 class="font-bold">Servicio</h2>
                            </div>
                            {# <label class="relative inline-flex items-center cursor-pointer">
                                <input type="checkbox" checked class="sr-only peer">
                                <div
                                    class="w-11 h-6 bg-white/10 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:left-0.5 after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-orange-600">
                                </div>
                            </label> #}
                        </div>
                        <div class="flex items-center justify-between p-4 rounded-2xl bg-white/5 border border-white/5">
                            <div class="flex items-center gap-3">
                                <i class="fa-solid fa-clock text-gray-500"></i>
                                <span class="text-sm font-medium">Tiempo estimado</span>
                            </div>
                            <span class="text-sm font-black">
                                {{ product.duration }} <span class="uppercase">{{ product.duration_type }}</span>
                            </span>
                        </div>
                    </div>
                    {% endif %}

                </div>

                {% if not product.is_service %}
                <div class="flex items-center justify-between mb-8 px-2">
                    <div>
                        <h2 class="text-2xl font-extrabold uppercase tracking-tighter">Historial de Lotes</h2>
                    </div>
                    <a href="/companies/{{ company_information.id }}/products/{{ product.id }}/batchs/create"
                        class="flex items-center gap-2 bg-white/5 border border-white/10 px-5 py-2.5 rounded-2xl text-xs font-bold hover:bg-white/10 transition-all uppercase tracking-widest text-orange-500">
                        <i class="fa-solid fa-plus"></i> Crear Nuevo
                    </a>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">

                    {% for batch in batchs %}
                    <div class="glass-card newest p-6">
                        <div class="flex justify-between items-start mb-6">
                            {% if batch.is_active %}
                            <span
                                class="bg-orange-500 text-[10px] font-black px-3 py-1 rounded-full text-white uppercase tracking-tighter">Activo</span>
                            {% else %}
                            <span
                                class="bg-gray-600 text-[10px] font-black px-3 py-1 rounded-full text-white uppercase tracking-tighter">No
                                Disponible - Usado</span>
                            {% endif %}
                            {# <button class="text-gray-500 hover:text-white transition-colors cursor-pointer"><i
                                    class="fa-solid fa-ellipsis-vertical"></i></button> #}
                        </div>

                        <div class="space-y-4">
                            <div>
                                <p class="text-[9px] text-gray-500 font-black uppercase tracking-widest mb-1">Fecha de
                                    Ingreso</p>
                                <div class="flex items-center gap-2">
                                    <i class="fa-solid fa-calendar-plus text-orange-500 text-xs"></i>
                                    <p class="text-sm font-bold">{{ batch.date }}</p>
                                </div>
                            </div>

                            <div class="py-3 border-y border-white/5">
                                <p class="text-[9px] text-gray-500 font-black uppercase tracking-widest mb-1">Expiración
                                </p>
                                <div class="flex items-center gap-2">
                                    {% if batch.expiration_active %}
                                    <i class="fa-solid fa-calendar-xmark text-emerald-500 text-xs"></i>
                                    <p class="text-sm font-bold text-emerald-400">{{ batch.expiration_date }}</p>
                                    {% else %}
                                    <i class="fa-solid fa-calendar-xmark text-gray-500 text-xs"></i>
                                    <p class="text-sm font-bold text-gray-400">No expira</p>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="flex justify-between items-end pt-2">
                                <div>
                                    <p class="text-[9px] text-gray-500 font-black uppercase tracking-widest">
                                        {% if product.is_bulk %}
                                        Cant. Lote (kg / L)
                                        {% else %}
                                        Cant. Lote
                                        {% endif %}
                                    </p>
                                    <p class="text-xl font-black">
                                        {{ batch.stock }}
                                        {% if product.is_bulk %} kg / L{% endif %}
                                    </p>
                                </div>
                                {# <div
                                    class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center border border-white/10 cursor-pointer">
                                    <i class="fa-solid fa-arrow-up-right-from-square text-[10px] text-gray-400"></i>
                                </div> #}
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                    {% if batchs_len <= 7 %} <a
                        href="/companies/{{ company_information.id }}/products/{{ product.id }}/batchs/create"
                        class="glass-card border-dashed border-2 border-white/10 flex flex-col items-center justify-center p-6 cursor-pointer hover:bg-white/5 hover:border-orange-500/30 group transition-all animate-box"
                        style="animation-delay: 0.4s;">
                        <div
                            class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                            <i class="fa-solid fa-plus text-gray-500 group-hover:text-orange-500"></i>
                        </div>
                        <p class="text-xs font-bold text-gray-500 uppercase tracking-widest">Añadir Lote</p>
                        </a>
                        {% endif %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</main>

<script>
    function download_svg(container_id, filename) {
        const container = document.getElementById(container_id);
        const svg = container.querySelector("svg");

        if (!svg) {
            notify("No se encontró el SVG", "error");
            return;
        }

        const serializer = new XMLSerializer();
        let source = serializer.serializeToString(svg);

        if (!source.match(/^<svg[^>]+xmlns="http:\/\/www\.w3\.org\/2000\/svg"/)) {
            source = source.replace(/^<svg/, '<svg xmlns="http://www.w3.org/2000/svg"');
        }

        const blob = new Blob([source], { type: "image/svg+xml;charset=utf-8" });
        const url = URL.createObjectURL(blob);

        const a = document.createElement("a");

        a.href = url;
        a.download = filename;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
    }
</script>

{% include "components/dashboard-footer.njk" %}

{% endblock %}