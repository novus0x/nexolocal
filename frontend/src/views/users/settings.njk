<script>
    function switch_tab(tab_id) {
        document.querySelectorAll('.tab-content').forEach(tab => {
            tab.classList.remove('active');
        });

        document.querySelectorAll('.nav-link').forEach(btn => {
            btn.classList.remove('active');
        });

        document.getElementById(tab_id).classList.add('active');
        document.getElementById('btn-' + tab_id).classList.add('active');
    }

    async function update_password() {
        // Elements
        const current_password = document.getElementById("current_password");
        const new_password = document.getElementById("new_password");
        const confirm_new_password = document.getElementById("confirm_new_password");

        // Operations
        if (!current_password.value || !new_password.value || !confirm_new_password.value) {
            if (!current_password.value) {
                if (!current_password.classList.contains("border-2")) {
                    current_password.classList.add("border-2");
                    current_password.classList.add("border-red-500");
                }
            } else {
                if (current_password.classList.contains("border-2")) {
                    current_password.classList.remove("border-2");
                    current_password.classList.remove("border-red-500");
                }
            }

            if (!new_password.value) {
                if (!new_password.classList.contains("border-2")) {
                    new_password.classList.add("border-2");
                    new_password.classList.add("border-red-500");
                }
            } else {
                if (new_password.classList.contains("border-2")) {
                    new_password.classList.remove("border-2");
                    new_password.classList.remove("border-red-500");
                }
            }


            if (!confirm_new_password.value) {
                if (!confirm_new_password.classList.contains("border-2")) {
                    confirm_new_password.classList.add("border-2");
                    confirm_new_password.classList.add("border-red-500");
                }
            } else {
                if (confirm_new_password.classList.contains("border-2")) {
                    confirm_new_password.classList.remove("border-2");
                    confirm_new_password.classList.remove("border-red-500");
                }
            }

            notify("Complete todos los campos", "error");
            return;
        } else {
            if (current_password.classList.contains("border-2")) {
                current_password.classList.remove("border-2");
                current_password.classList.remove("border-red-500");
            }
            if (new_password.classList.contains("border-2")) {
                new_password.classList.remove("border-2");
                new_password.classList.remove("border-red-500");
            }
            if (confirm_new_password.classList.contains("border-2")) {
                confirm_new_password.classList.remove("border-2");
                confirm_new_password.classList.remove("border-red-500");
            }
        }

        const current_password_value = current_password.value;
        const new_password_value = new_password.value;
        const confirm_new_password_value = confirm_new_password.value;

        if (new_password_value.length < 12 || confirm_new_password_value.length < 12) {
            notify("Las contraseña debe de tener un mínimo de 12 caracteres por cuestiones de seguridad", "error");
            return;
        } else if (new_password_value != confirm_new_password_value) {
            notify("Las contraseñas no coinciden", "error");
            return;
        }

        const payload = {
            current_password: current_password_value,
            new_password: new_password_value,
            confirm_new_password: confirm_new_password_value
        }

        const response = await fetch(
            `/users/api/settings/update_password`,
            {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(payload)
            }
        )

        const result = await response.json()

        if (result.error) {
            result.errors.forEach(error => {
                notify(`${error}`, "error")
            });

            return;
        }

        notify(`${result.message}`, "success");

        current_password.value = "";
        new_password.value = "";
        confirm_new_password.value = "";
    }

    const update_password_container = document.getElementById("update-password-container");

    update_password_container.addEventListener("keydown", (e) => {
        if (e.key === "Enter") {
            update_password();
        }
    });
    
</script>

