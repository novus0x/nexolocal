{% extends "layouts/dashboard.njk" %}

{% block title %}Platform Dashboard{% endblock %}

{% block content %}
{% include "components/dashboard-sidebar.njk" %}
{% include "components/dashboard-header.njk" %}
<main class="flex-1 overflow-y-auto p-6 lg:p-10">
    <div class="w-full space-y-8">
        <div class="mb-8">
            <nav class="flex mb-3 text-xs font-bold tracking-widest text-gray-500 justify-between flex-col md:flex-row gap-5"
                aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3 uppercase">
                    <li class="inline-flex items-center">
                        <a href="/" class="hover:text-white transition-colors">Dashboard</a>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <span class="ml-1 md:ml-2 text-orange-500">Negocios</span>
                        </div>
                    </li>
                </ol>
                <a href="/platform/companies/create"
                    class="bg-[#FD420A] hover:bg-[#ff5a26] text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95">
                    <i class="fa-solid fa-plus"></i>
                    Nuevo Negocio
                </a>
            </nav>
        </div>

        <div class="flex flex-col md:flex-row gap-4 py-4 rounded-2xl">
            <div class="relative flex-1">
                <i
                    class="fa-solid fa-magnifying-glass absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-500"></i>
                <input type="text" placeholder="Buscar por nombre, ID o encargado..."
                    class="w-full bg-[#0B0F14] border border-[#30363D] rounded-xl pl-12 pr-4 py-2.5 text-sm focus:border-orange-500 outline-none transition-all">
            </div>
            <select
                class="bg-[#0B0F14] border border-[#30363D] text-gray-400 px-4 py-2.5 rounded-xl text-sm outline-none focus:border-orange-500 cursor-pointer">
                <option>Todos los Planes</option>
                <option>Premium</option>
                <option>B치sico</option>
            </select>
            <select
                class="bg-[#0B0F14] border border-[#30363D] text-gray-400 px-4 py-2.5 rounded-xl text-sm outline-none focus:border-orange-500 cursor-pointer">
                <option>Estado: Todos</option>
                <option>Activos</option>
                <option>Suspendidos</option>
            </select>
        </div>

        {# <button onclick="notify('probando', 'warning');">t</button> #}

        <div class="bg-[#151B23] border border-[#30363D] rounded-3xl overflow-hidden shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse custom-table">
                    <thead>
                        <tr
                            class="bg-[#0D1117] text-[10px] uppercase font-black tracking-widest text-gray-500 border-b border-[#30363D]">
                            <th class="px-8 py-5">Informaci칩n del Negocio</th>
                            <th class="px-6 py-5">Gesti칩n / Titular</th>
                            <th class="px-6 py-5">Plan & Suscripci칩n</th>
                            <th class="px-6 py-5">Invitado por</th>
                            <th class="px-8 py-5 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#30363D]">
                        {% for company in companies %}
                        <tr class="group">
                            <td class="px-8 py-6">
                                <div class="flex items-center gap-4">
                                    <div class="flex items-center justify-center font-bold">
                                        <img src="https://ui-avatars.com/api/?name={{ company.name }}&background=FD420A&color=fff"
                                            class="w-10 h-10 rounded-xl" alt="Avatar">
                                    </div>
                                    <div class="flex flex-col min-w-0">
                                        <span class="text-sm font-bold text-white truncate max-w-45">{{ company.name }}</span>
                                        <div class="flex items-center gap-2 mt-1">
                                            <span class="text-[10px] text-gray-500">{{ company.date }}</span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-6">
                                <div class="flex items-center gap-3">
                                    <div class="flex flex-col">
                                        <span class="text-xs font-bold capitalize">{{ company.in_charge.fullname }}</span>
                                        <span class="text-[11px] text-gray-500">{{ company.in_charge.email }}</span>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-6">
                                <div class="flex flex-col items-start gap-2">
                                    <span class="badge badge-active uppercase">{{ company.plan }}</span>
                                    <div class="flex items-center gap-2">
                                        {% if not company.suspended and not company.active %}
                                        <span class="w-2 h-2 bg-yellow-500 rounded-full"></span>
                                        <span class="text-[11px] font-medium text-yellow-500">Pendiente</span>
                                        {% elif company.active %}
                                        <span class="w-2 h-2 bg-green-500 rounded-full"></span>
                                        <span class="text-[11px] font-medium text-green-500">Activo</span>
                                        {% else %}
                                        <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                                        <span class="text-[11px] font-medium text-red-500">Suspendido</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-6 text-gray-400">
                                <div class="flex items-center gap-2">
                                    <span class="text-xs capitalize">{{ company.invited_by.fullname }}</span>
                                </div>
                            </td>
                            <td class="px-8 py-6 text-right">
                                <div class="flex justify-end gap-1">
                                    {% if not company.suspended %}
                                    <a href="#{{ company.id }}"
                                        class="p-2.5 text-green-400 hover:text-white hover:bg-white/5 rounded-xl transition-all cursor-pointer"
                                        title="Editar">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a href="#{{ company.id }}"
                                        class="p-2.5 text-yellow-500 hover:bg-yellow-500/10 rounded-xl transition-all cursor-pointer"
                                        title="Suspender">
                                        <i class="fa-solid fa-triangle-exclamation"></i>
                                    </a>
                                    {% else %}
                                    <button
                                        class="px-4 py-2 bg-white/5 hover:bg-white/10 rounded-xl text-xs font-bold text-green-500 transition-all cursor-pointer">Re-Activar</button>
                                    {% endif %}
                                    <a href="#{{ company.id }}"
                                        class="p-2.5 text-red-500 hover:bg-red-500/10 rounded-xl transition-all cursor-pointer">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-6 flex items-center justify-between">
            <p class="text-xs text-gray-500 font-medium">Mostrando 1-10 de 1,240 usuarios</p>
            <div class="flex gap-2">
                <button
                    class="px-4 py-2 bg-[#151B23] border border-[#30363D] rounded-lg text-xs font-bold hover:bg-[#1C222B] transition-colors">Anterior</button>
                <button
                    class="px-4 py-2 bg-[#FD420A] text-white rounded-lg text-xs font-bold shadow-lg shadow-orange-900/20 active:scale-95 transition-all">Siguiente</button>
            </div>
        </div>
    </div>
</main>
{% include "components/dashboard-footer.njk" %}

{% endblock %}