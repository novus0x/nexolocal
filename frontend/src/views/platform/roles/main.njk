{% extends "layouts/dashboard.njk" %}

{% block title %}Platform Dashboard{% endblock %}

{% block content %}
{% include "components/dashboard-sidebar.njk" %}
{% include "components/dashboard-header.njk" %}
<main class="flex-1 overflow-y-auto p-6 lg:p-10">
    <div class="w-full space-y-8">

        <div class="mb-8">
            <nav class="flex mb-3 text-xs font-bold tracking-widest text-gray-500 justify-between flex-col md:flex-row gap-5"
                aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3 uppercase">
                    <li class="inline-flex items-center">
                        <a href="/" class="hover:text-white transition-colors">Dashboard</a>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <span class="ml-1 md:ml-2 text-orange-500">Roles</span>
                        </div>
                    </li>
                </ol>
                <a href="/platform/roles/create"
                    class="bg-(--accent) hover:bg-[#ff5a26] text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95">
                    <i class="fa-solid fa-plus"></i>
                    Nuevo Rol
                </a>
            </nav>
        </div>

        <div class="rounded-2xl mb-6 flex flex-col items-start justify-between gap-4">
            <div class="flex items-center gap-4">
                <div id="type-switch" class="switch-container" onclick="toggle_filter_roles()">
                    <div class="switch-slider" id="slider"></div>
                    <div class="switch-option active" id="opt-system">Plataforma</div>
                    <div class="switch-option" id="opt-user">Negocios</div>
                </div>
            </div>
        </div>

        <div class="bg-[#151B23] border border-[#30363D] rounded-3xl overflow-hidden shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse custom-table">
                    <thead>
                        <tr
                            class="bg-[#0D1117] text-[10px] uppercase font-black tracking-widest text-gray-500 border-b border-[#30363D]">
                            <th class="px-8 py-5">Nombre Del Rol</th>
                            <th class="px-6 py-5">Origen</th>
                            <th class="px-8 py-5 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#30363D]">
                        {% for role in roles %}
                        <tr class="group">
                            <td class="px-8 py-6">
                                <div class="flex items-center gap-4">
                                    {% if role.platform %}
                                    <div
                                        class="w-10 h-10 bg-(--accent)/10 text-(--accent) rounded-lg flex items-center justify-center">
                                        <i class="fa-solid fa-code-simple"></i>
                                    </div>
                                    {% else %}
                                    <div
                                        class="w-10 h-10 bg-blue-500/10 text-blue-400 rounded-lg flex items-center justify-center">
                                        <i class="fa-solid fa-user"></i>
                                    </div>
                                    {% endif %}
                                    <span class="font-semibold">{{ role.name }}</span>
                                </div>
                            </td>
                            <td class="px-6 py-6 text-gray-400">
                                {% if role.platform %}
                                <span
                                    class="text-xs bg-(--accent)/10 text-orange-400 px-2 py-1 rounded">Plataforma</span>
                                {% else %}
                                <span class="text-xs bg-blue-500/10 text-blue-400 px-2 py-1 rounded">Negocio</span>
                                {% endif %}
                            </td>
                            <td class="px-8 py-6 text-right">
                                <div class="flex justify-end gap-1">
                                    <button
                                        class="p-2.5 text-green-400 hover:text-white hover:bg-white/5 rounded-xl transition-all cursor-pointer"
                                        title="Editar">
                                        <i class="fa-solid fa-eye"></i>
                                    </button>
                                    <a href="/platform/roles/update/{{ role.id }}"
                                        class="p-2.5 text-yellow-500 hover:bg-yellow-500/10 rounded-xl transition-all cursor-pointer"
                                        title="Editar">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <button
                                        class="p-2.5 text-red-500 hover:bg-red-500/10 rounded-xl transition-all cursor-pointer">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-between">
            <p class="text-xs text-gray-500 font-medium">Mostrando 1-10 de 1,240 usuarios</p>
            <div class="flex gap-2">
                <button
                    class="px-4 py-2 bg-[#151B23] border border-[#30363D] rounded-lg text-xs font-bold hover:bg-[#1C222B] transition-colors cursor-pointer">Anterior</button>
                <button
                    class="bg-(--accent) hover:bg-(--accent-hover) text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95 cursor-pointer">Siguiente</button>
            </div>
        </div>

    </div>
</main>
{% include "components/dashboard-footer.njk" %}

{% endblock %}