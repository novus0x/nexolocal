{% extends "layouts/dashboard.njk" %}

{% block title %}Platform Dashboard{% endblock %}

{% block content %}
{% include "components/dashboard-sidebar.njk" %}
{% include "components/dashboard-header.njk" %}
<main class="flex-1 overflow-y-auto p-6 lg:p-10">
    <div class="w-full space-y-8">

        <div class="mb-8">
            <nav class="flex mb-3 text-xs font-bold tracking-widest text-gray-500 flex-col md:flex-row gap-5"
                aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3 uppercase">
                    <li class="inline-flex items-center">
                        <a href="/" class="hover:text-white transition-colors">Dashboard</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <a href="/platform/users" id="breadcrumb-workspace"
                                class="hover:text-white ml-1 md:ml-2 transition-colors">Usuarios</a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <i class="fa-solid fa-chevron-right text-gray-600"></i>
                            <span class="ml-1 md:ml-2 text-orange-500">{{ user_data.fullname }}</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>

        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
            <div class="flex items-center gap-5">
                <div>
                    <div class="flex items-center gap-3 mb-1">
                        <h1 class="text-2xl font-black tracking-tight">Datos del Usuario</h1>
                        {% if user_data.is_blocked %}
                        <span class="status-pill bg-red-500/10 text-red-400 border border-red-500/20">Suspendido</span>
                        {% else %}
                        <span
                            class="status-pill bg-green-500/10 text-green-400 border border-green-500/20">Activo</span>
                        {% endif %}
                    </div>
                    <p class="text-sm text-[#8B949E] flex items-center gap-2">
                        <span class="font-mono text-xs bg-[#21262D] px-2 py-0.5 rounded text-gray-400">ID: {{
                            user_data.id }}</span>
                        •
                        <span>Fecha de Registro: {{ user_data.date }}</span>
                    </p>
                </div>
            </div>
            {% if "platform.users.update" in permissions %}
            <div class="flex items-center gap-3">
                <a href="/platform/users/update/{{ user_data.id }}"
                    class="bg-(--accent) hover:bg-(--accent-hover) text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95 cursor-pointer">
                    <i class="fa-solid fa-pen text-base"></i>
                    Editar
                </a>
            </div>
            {% endif %}
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
            <div class="lg:col-span-4 space-y-6">
                <div class="glass-card p-8 relative overflow-hidden">
                    <div class="relative flex flex-col items-center">
                        <div class="relative mb-6">
                            <div class="w-32 h-32 rounded-[2.5rem] bg-[#0D1117] p-1 shadow-2xl">
                                <img src="https://ui-avatars.com/api/?name={{ user_data.fullname }}&amp;background=FD420A&amp;color=fff"
                                    class="w-full h-full rounded-[2.2rem] object-cover" alt="Avatar">
                            </div>
                            <div
                                class="absolute -bottom-2 -right-2 w-10 h-10 bg-[#080B0F] rounded-2xl flex items-center justify-center border border-[#21262D]">
                                <i class="fa-regular fa-shield text-green-600"></i>
                            </div>
                        </div>

                        <h2 class="text-2xl font-bold text-center capitalize">{{ user_data.fullname }}</h2>
                        <p class="text-[#8B949E] text-sm mb-6 lowercase">{{ user_data.email }}</p>

                        <div class="w-full grid grid-cols-1 gap-3 mb-6">
                            <div class="bg-[#0D1117] p-3 rounded-2xl border border-[#21262D] text-center">
                                <p class="text-[10px] uppercase font-bold text-gray-500 mb-1">Rol</p>
                                {% if not user_data.is_platform_super_admin %}
                                {% if user_role.available %}
                                <p class="text-xs font-bold text-orange-400">{{ user_role.name }}</p>
                                {% else %}
                                <p class="text-xs font-bold text-orange-400">No Disponible</p>
                                {% endif %}
                                {% else %}
                                <p class="text-xs font-bold text-orange-400">Admin</p>
                                {% endif %}
                            </div>
                            {# <div class="bg-[#0D1117] p-3 rounded-2xl border border-[#21262D] text-center">
                                <p class="text-[10px] uppercase font-bold text-gray-500 mb-1">Reputación</p>
                                <p class="text-xs font-bold text-green-400">98 / 100</p>
                            </div> #}
                        </div>
                    </div>

                    <div class="space-y-4 pt-6 border-t border-[#21262D]">
                        <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-[#8B949E]">Datos de contacto
                        </h4>
                        <div class="space-y-3">
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">Teléfono</span>
                                <span class="text-xs font-medium">---</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">Ubicación</span>
                                <span class="text-xs font-medium">---</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-xs text-gray-500">Idioma</span>
                                <span class="text-xs font-medium">{{ user_data.preferred_language }}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="glass-card p-6">
                    <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-[#8B949E] mb-4">Seguridad y Acceso
                    </h4>
                    <p class="text-center text-[#8B949E] italic py-10">
                        Proximamente
                    </p>
                </div>
            </div>

            <div class="lg:col-span-8 space-y-6">
                <div id="notifications" class="tab-content space-y-4">
                    <div class="glass-card p-6">
                        <p class="text-center text-[#8B949E] italic py-10">
                            Proximamente
                        </p>
                    </div>
                </div>

            </div>
        </div>

    </div>
</main>


{% include "components/dashboard-footer.njk" %}

{% endblock %}