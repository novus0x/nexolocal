{% extends "layouts/auth.njk" %}

{% block content %}
<div class="glow-bg" style="top: -15%; right: -10%;"></div>
<div class="glow-bg" style="bottom: -15%; left: -10%;"></div>

<div class="w-full max-w-lg px-6 flex flex-col items-center">

    <div class="flex flex-col items-center mb-10">
        <div class="w-24 h-24 rounded-2xl flex items-center justify-center mb-4">
            <img src="/public/img/logo.png">
        </div>
        <h1 class="text-2xl font-bold tracking-tight">Nexo<span class="text-(--accent)">Local</span></h1>
    </div>

    <div class="auth-card bg-[#151B23]/90 p-8 sm:p-10 rounded-[2.5rem] shadow-2xl w-full">

        <div id="auth-content" class="fade-in">
            <div id="login-form">
                <h2 class="text-2xl font-bold mb-1">Bienvenido</h2>
                <p class="text-gray-500 text-sm mb-8">Accede a tu panel de control comercial.</p>

                <form action="/auth/login" method="POST" class="space-y-5" autocomplete="off">
                    <div class="space-y-2">
                        <label class="block text-[10px] font-bold uppercase tracking-[0.15em] text-gray-400 ml-1">Correo
                            Electrónico</label>
                        <input type="email" name="email" required placeholder="youremail@gmail.com"
                            value="{{ email | default('') }}"
                            class="input-field w-full px-4 py-3.5 rounded-xl text-sm text-white placeholder-gray-600"
                            autofocus>
                    </div>

                    <div class="space-y-2">
                        <div class="flex justify-between items-center ml-1">
                            <label
                                class="block text-[10px] font-bold uppercase tracking-[0.15em] text-gray-400">Contraseña</label>
                        </div>
                        <input type="password" name="password" required placeholder="••••••••"
                            class="input-field w-full px-4 py-3.5 rounded-xl text-sm text-white placeholder-gray-600">
                    </div>

                    <div class="flex items-center justify-between py-2">
                        <label class="flex items-center gap-3 cursor-pointer group">
                            <input type="checkbox" name="expire" value="true" class="custom-checkbox" {% if expire
                                %}checked{% endif %}>
                            <span class="text-xs text-gray-400 group-hover:text-gray-200 transition-colors">Mantener
                                sesión iniciada</span>
                        </label>
                        <button type="button" onclick="render_forgot_password()"
                            class="text-[10px] font-bold text-(--accent) hover:underline uppercase tracking-wider cursor-pointer">¿Olvidaste
                            la clave?</button>
                    </div>

                    <button type="submit"
                        class="bg-(--accent) hover:bg-(--accent-hover) text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95 cursor-pointer w-full">
                        Entrar al Sistema
                    </button>
                </form>
            </div>
        </div>

        <div id="social-auth">
            <div class="relative my-10">
                <div class="absolute inset-0 flex items-center">
                    <div class="w-full border-t border-[#30363D]"></div>
                </div>
                <div class="relative flex justify-center text-[10px] uppercase font-bold tracking-[0.2em]"><span
                        class="bg-[#151B23] px-4 text-gray-500">O mediante</span></div>
            </div>

            <div class="grid grid-cols-1 gap-4">
                <a href="https://accounts.google.com/o/oauth2/v2/auth?client_id={{ oauth.google }}&redirect_uri=https://nexolocal.floua.app/oauth/google&response_type=code&scope=openid%20email%20profile"
                    class="flex items-center justify-center gap-3 py-3.5 rounded-2xl bg-[#0D1117] border border-[#30363D] text-sm font-medium hover:bg-[#161B22] transition-all cursor-pointer">
                    <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <path fill="#4285F4"
                            d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                        <path fill="#34A853"
                            d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                        <path fill="#FBBC05"
                            d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l3.66-2.84z" />
                        <path fill="#EA4335"
                            d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 12-4.53z" />
                    </svg>
                    Google
                </a>
            </div>
        </div>
    </div>

    <p id="toggle-text" class="text-center mt-10 text-sm text-gray-500">
        ¿No tienes una cuenta? <button onclick="render_register()"
            class="text-(--accent) font-bold hover:underline cursor-pointer">Regístrate ahora</button>
    </p>

    <p class="text-center text-xs mt-2 text-gray-400">Al usar la applicacion estas aceptando los <a href="/legal/terms"
            target="_blank" class="text-(--accent)">Términos Y Condiciones</a></p>
</div>
{% endblock %}