{% extends "layouts/auth.njk" %}

{% block content %}
<div class="glow-bg" style="top: -15%; right: -10%;"></div>
<div class="glow-bg" style="bottom: -15%; left: -10%;"></div>

<div class="w-full max-w-lg px-6 flex flex-col items-center">

    <div class="flex flex-col items-center mb-10">
        <div class="w-24 h-24 rounded-2xl flex items-center justify-center mb-4">
            <img src="/public/img/logo.svg">
        </div>
        <h1 class="text-2xl font-bold tracking-tight uppercase">Nexo<span class="text-(--accent)">Local</span></h1>
    </div>

    <div class="auth-card bg-[#151B23]/90 p-8 sm:p-10 rounded-[2.5rem] shadow-2xl w-full text-center">

        <div
            class="w-24 h-24 bg-green-500/10 border border-green-500/20 rounded-full flex items-center justify-center mx-auto mb-8">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none"
                stroke="#22c55e" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"
                class="drop-shadow-[0_0_12px_rgba(34,197,94,0.4)]">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
                <polyline points="22 4 12 14.01 9 11.01" />
            </svg>
        </div>

        <h2 class="text-3xl font-black mb-3">Contraseña Cambiada!</h2>

        <div class="space-y-4">
            <a href="/auth"
                class="bg-(--accent) hover:bg-(--accent-hover) text-white px-6 py-3 rounded-2xl text-sm font-bold flex items-center justify-center gap-2 transition-all shadow-xl shadow-orange-900/20 active:scale-95 cursor-pointer">
                Volver al Inicio de Sesión
            </a>
        </div>
    </div>
</div>
{% endblock %}